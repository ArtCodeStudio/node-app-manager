{
  "name": "@artcodestudio/node-app-manager",
  "version": "0.0.1",
  "description": "Manage your Node.js applications",
  "author": "Pascal Garber <pascal@artandcode.studio>",
  "license": "AGPL",
  "bin": "./bin/run",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:local": "pm2 start ./pm2.local.config.js",
    "start:prod": "pm2 start ./pm2.prod.config.js",
    "start:dev": "pm2 start ./pm2.dev.config.js",
    "_start:dev": "yarn run watch:dev",
    "_start:local": "yarn run watch:local",
    "_start:prod": "NODE_ENV=production node dist/main",
    "watch:dev": "NODE_ENV=development nest start --watch",
    "watch:local": "NODE_ENV=local nest start --watch",
    "watch:prod": "NODE_ENV=production nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@artcodestudio/redbird": "workspace:*",
    "@nestjs/common": "^8.0.4",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.4",
    "@nestjs/platform-express": "^8.0.4",
    "@root/keypairs": "^0.10.1",
    "@types/app-root-path": "^1.2.4",
    "@types/glob": "^7.1.4",
    "@types/yaml": "^1.9.7",
    "acme-http-01-webroot": "^3.0.0",
    "app-root-path": "^3.0.0",
    "dotenv": "^10.0.0",
    "get-port": "^5.1.1",
    "glob": "^7.1.7",
    "lodash": "^4.17.21",
    "pm2": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "source-map-support": "^0.5.19",
    "yaml": "^1.10.2",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.2",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.4.1",
    "@types/supertest": "^2.0.11",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
